{
  "info": {
    "name": "AgroPulse API - Global Collection",
    "_postman_id": "agropulse-full-collection",
    "description": "Collection compl√®te regroupant tous les modules AgroPulse",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },

  "variable": [
    { "key": "Urlbase", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],

  "item": [


    {
      "name": "AUTH",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{Urlbase}}/auth/register",
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Example\",\n  \"email\": \"user@example.com\",\n  \"password\": \"12345678\"\n}" }
          }
        },
        {
          "name": "Login",
          "request": { "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{Urlbase}}/auth/login",
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"12345678\"\n}" }
          }
        },
        { "name": "Refresh", "request": { "method": "GET", "url": "{{Urlbase}}/auth/refresh" } }
      ]
    },

    {
      "name": "ORGANIZATIONS",
      "item": [
        { "name": "Create", "request": { "method": "POST", "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{Urlbase}}/organizations",
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Farm A\",\n  \"address\": \"City\"\n}" }}},
        { "name": "Get All", "request": { "method": "GET", "header":[{ "key": "Authorization","value":"Bearer {{token}}" }], "url": "{{Urlbase}}/organizations" }},
        { "name": "Get One", "request": { "method": "GET", "header":[{ "key": "Authorization","value":"Bearer {{token}}" }], "url": "{{Urlbase}}/organizations/:id" }},
        { "name": "Update", "request": { "method": "PUT", "header":[
          { "key": "Content-Type","value":"application/json" },
          { "key": "Authorization","value":"Bearer {{token}}" }
        ],
        "url": "{{Urlbase}}/organizations/:id",
        "body": { "mode": "raw", "raw": "{ \"name\": \"New Name\" }" }}},
        { "name": "Delete", "request": { "method": "DELETE", "header":[{ "key": "Authorization","value":"Bearer {{token}}" }], "url": "{{Urlbase}}/organizations/:id" }}
      ]
    },

    {
      "name": "USERS",
      "item": [
        { "name": "Create", "request": { "method": "POST",
          "header": [
            { "key": "Content-Type","value": "application/json" },
            { "key": "Authorization","value": "Bearer {{token}}" }
          ],
          "url": "{{Urlbase}}/users",
          "body": { "mode": "raw", "raw": "{\n  \"name\":\"User\",\n  \"email\":\"user@mail.com\",\n  \"password\":\"12345678\"\n}" }
        }},
        { "name": "Get All", "request": { "method": "GET", "header":[{ "key": "Authorization","value":"Bearer {{token}}" }], "url": "{{Urlbase}}/users" }},
        { "name": "Get One", "request": { "method": "GET", "header":[{ "key": "Authorization","value":"Bearer {{token}}" }], "url": "{{Urlbase}}/users/:id" }},
        { "name": "Update", "request": { "method": "PUT",
          "header":[
            { "key": "Content-Type","value":"application/json" },
            { "key": "Authorization","value":"Bearer {{token}}" }
          ],
          "url": "{{Urlbase}}/users/:id",
          "body": { "mode": "raw", "raw": "{ \"name\": \"Updated User\" }" }
        }},
        { "name": "Delete", "request": { "method": "DELETE", "header":[{ "key": "Authorization","value":"Bearer {{token}}" }], "url": "{{Urlbase}}/users/:id" }}
